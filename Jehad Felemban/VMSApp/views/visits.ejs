<!DOCTYPE html>
<%- include("./partial/header.ejs") %>
<html>

<head>
  <title>
    All Visits

  </title>
</head>

<body>
  <div class="mx-auto p-b-20 p-t-20">
    <% if (message.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show text-center">
      <strong>Success!</strong> <%= message %>
    </div>
    <% } %>
    <% if (message2.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show text-center">
        <strong>ERROR!</strong> <%= message2 %>
      </div>
      <% } %>


    <div class="row">

      <div class="col-3">
        <h1>
          Previous Visits
        </h1>
      </div>
      <div class="vl"></div>
      <div class="col">

        <div class="row">
          <div class="col-9">
            <div class="table-responsive table-responsive-data2">
              <table class="table table-hover table-bordered" id="VisPreviousVisits">
                <thead class="theadHeader">
                  <tr>
                    <th>Host</th>
                    <th>Car</th>
                    <th>Destination</th>
                    <th>Date</th>
                  </tr>
                </thead>
                <ul id='attendance'>
                  <% visits.forEach(function(visit){ %>

                  <thead>
                    <tr>

                      <td><a href="/visits/<%=visit.id%>"><%= visit.host %> </a></td>

                      <td><%= visit["car_make"] %> <%= visit["car_model"]%> </td>
                      <td><%= visit.destination %></td>
                      <td><%= visit.date %></td>

                    </tr>
                  </thead>

                  <%})%>
                </ul>


                <tbody>
                </tbody>
              </table>
            </div>

          </div>
          <div class="col-3">

          </div>
        </div>
      </div>
    </div>

  </div>
  <div class="mx-auto p-b-20 p-t-20">
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center ">
          <div class="row">
            <div class="col">

            </div>
            <div class="col text-center">
              <form action="/visits/new">
                <button type="submit mx-auto" class="btn btn-success  btn-lg text-center">Add new visit</button>
              </form>
            </div>
            <div class="col text-center">
              <form action="/check" method="GET">
                <button type="submit" class="btn btn-success btn-lg text-center"> Check Visit Reqeust</button>
              </form>
            </div>
            <div class="col">

            </div>

          </div>

        </div>
      </div>
    </div>
  </div>



  <%- include("./partial/footer.ejs") %>

</body>

</html>