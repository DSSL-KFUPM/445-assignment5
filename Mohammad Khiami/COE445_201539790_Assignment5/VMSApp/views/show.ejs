<!DOCTYPE html>

<html lang="en">
	<head>
		<title>Visitors</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		
		<!-- Bootstrab -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		
		<!-- External CSS -->
		<link rel="stylesheet" type="text/css" href="/style.css">
	</head>

	<body>
		<div class="container-fluid">
			<div class=“row”>
				<div class="col-xs-4">
					<img src=https://upload.wikimedia.org/wikipedia/en/9/98/King_Fahd_University_of_Petroleum_%26_Minerals_Logo.svg alt="KFUPM LOGO" class="vrsImgLogo">
				</div>
				<div class="col-xs-4 text-center">
					<h1 class="vrsHeaderMain">Visitors</h1>
				</div>
				<div class="col-xs-4">
					<br>
				</div>
			</div>
		</div>
		
		<hr>
		
		<div class="container-fluid">
			<div class=“row”>
				<div class="col-xs-4">
					<h1 class="vrsHeaderLeft"> Visitor Information </h1>
				</div>
				<div class="col-xs-4">
					<img src=https://i.pinimg.com/474x/1f/ae/50/1fae509c2625b85c3011bba0b462b9c8--my-friend-friends.jpg alt="Troll Face" class="vrImgFace">
				</div>
				<div class="col-xs-4 d-flex align-items-center">
					<table>
						<tr id="nameRow">
							<th> Name </th>
							<td> <%= name %> </td>
						</tr>
					</table>
				</div>
			</div>
		</div>
		
		<hr>
		
		<div class="container-fluid">
			<div class=“row”>
				<div class="col-xs-4">
					<h1 class="vrsHeaderLeft"> Visits History </h1>
				</div>
				<div class="col-xs-8">
					<table id="visitsHistoryTable">
                        <tr>
                            <th> Host </th>
                            <th> Date </th>
                            <th> Time </th>
                            <th> Destination </th>
                            <th> Car Make </th>
                            <th> Car Model </th>
                            <th> Plate number </th>
                        </tr>
						
						<% visitHistory.forEach(function(visit){ %>
							<tr>
								<td>  <%= visit["host"] %> </td>
								<td>  <%= visit["date"] %> </td>
								<td>  <%= visit["time"] %> </td>
								<td>  <%= visit["destination"] %> </td>
								<td>  <%= visit["car_make"] %> </td>
								<td>  <%= visit["car_model"] %> </td>
								<td>  <%= visit["plate_number"] %> </td>
								<td> 
									<form action="/visits/<%= name %>/?_method=DELETE" method="POST">
										<button type="submit">Delete</button>
									</form>
								</td>
								<td> 
									<form action="/visits/<%= name %>/edit">
										<button type="submit">Edit</button>
									</form>
								</td>
							</tr>
						<%})%>
					</table>
				</div>
			</div>
		</div>
		
		<hr>
	</body>

</html>