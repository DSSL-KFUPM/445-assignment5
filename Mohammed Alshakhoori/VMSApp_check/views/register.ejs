    <style>
        * {
  box-sizing: border-box;
}
.img {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 30%;
}
.img1 {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 10%;
}

H1{
text-align: center;
}
.columnheader {
  float: left;
  padding: 10px;
  background-color: darkgreen;
  color: white;
  text-align: center;
}
.column {
  float: left;
  padding: 30px;
 
}
.left {
  line-height: 26pt;
  width: 15%;
  background-color: darkgreen;
  color: white;
   text-align: left;
}

.rightheader {
  width: 85%; 
  background-color: darkgreen;
}
.right {
  width: 85%; 
  border: 2.5px solid green;
  
}

.left1 {
  width: 100%; 
  background-color: green;
}
.right1 {
  width: 50%;
  background-color: green;
}

.button {
  background-color: white;
   border: 3px solid green;
  width: 100%;
}
.button:hover {
  background-color: rgb(220, 220, 220)
;
  color: white;
}

.row:after {
  content: "";
  display: table;
  clear: both;
}
table{
  color: green;
    width:100%;
}
table, th, td {
  border: 3px solid green;
  border-collapse: collapse;
}
th, td {
  padding: 5px;
