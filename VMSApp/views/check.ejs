<body class="body">

    <div class="jumbotron jumbotron-fluid" id="home-jumbotron">
        <div class="container">
            <img src="https://rayanaj.github.io/images/KFUPMLogo.png" alt="KFUPM logo" id="KFUPM-logo">
            <h1 class="display-4">Visiting Management System</h1>
            <hr class="my-5">
            <div class="btn-group btn-group-justified btn-group-lg" id="Main-buttons">
                <div class="container" style="text-align: center">
                    <form action="/check/?_method=PUT" method="POST">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Check PIN</span>
                            </div>
                            <input type="text" name="pin" placeholder="0 0 0 0 0 0" class="form-control" pattern="[1-9]{1}[0-9]{5}" required>
