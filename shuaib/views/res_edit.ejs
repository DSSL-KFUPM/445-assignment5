<head>
    <title>
      Edit Resident Info
    </title>
  </head>
  <%- include("./partial/header.ejs") %>
  
  <body style="background-color:rgb(231, 255, 153);">
	<container>
    <h2 style="text-align:center;">Edit Information Of <%= visit.name%></h2>
<div style="width: 50%; margin: 0px 25%;">
  <form action="/resident.html/visits/new<%=visit.name%>" method="POST">
   
    <div class="form-group">
      <label for="id">Name  </label>
      <input type="input" class="form-control" id="name" name="name" value="<%= visit.name%>" required>
    </div>
    <div class="form-group">
      <label for="host">Host </label>
      <input type="input" class="form-control" id="host" name="host" placeholder="Host" value="<%= visit.host%>"required>
    </div>
    <div class="form-group">
      <label for="destination">Destination</label>
      <input type="text" class="form-control" id="destination" name="destination" placeholder="Destination" value="<%= visit.destination%>" required>
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      <input type="text" class="form-control" id="date" name="date" value="<%= visit.date%>" required>
    </div>
    <div class="form-group">
      <label for="time">Time</label>
      <input type="text" class="form-control" id="time" name="time" value="<%= visit.time%>" required>
    </div>

    <!----
    <div class="form-group">
      <label for="car_model">Car Model</label>
      <input type="text" class="form-control" id="car_model" name="car_model" value="<%= visit.car_model%>" required>
    </div>
    <div class="form-group">
      <label for="plate_number">plate_number</label>
      <input type="text" class="form-control" id="plate_number" name="plate_number" value="<%= visit.plate number%>" required>
    </div>
  -->
    <button type="submit" class="btn btn-primary">UPDATE</button>
  </form>
</div>  

</container>
</body>
</html>